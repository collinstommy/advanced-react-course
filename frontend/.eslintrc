{
  "extends": "airbnb",
  "settings": {
    "import/resolver": "webpack"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "impliedStrict": true,
      "globalReturn": false
    }
  },
  "rules": {
    "no-param-reassign": [
      1,
      {
        "props": false
      }
    ],
    "arrow-parens": 0,
    "comma-dangle": 0,
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "no-plusplus": 0,
    "no-console": 0,
    "no-confusing-arrow": 0,
    "import/no-extraneous-dependencies": 0,
    "react/require-extension": "off",
    "react/prefer-stateless-function": "off",
    "react/react-in-jsx-scope": 0,
    "no-trailing-spaces": [
      2,
      {
        "skipBlankLines": true
      }
    ],
    "react/forbid-prop-types": 0,
    "no-unused-expressions": [
      1,
      {
        "allowTernary": true,
        "allowTaggedTemplates": true
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "max-len": [
      2,
      {
        "code": 120,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  },
  "globals": {
    "$": true,
    "document": true,
    "window": true,
    "navigator": true,
    "localStorage": true,
    "jQuery": true,
    "location": true,
    "Invoca": true
  }
}